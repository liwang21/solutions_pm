{
    "id": "skilljar",
    "name": "Skilljar",
    "logo": "skilljar-icon.svg",
    "operation": [
        {
            "id": "fetchCourses",
            "name": "Fetch Courses",
            "productFeatureId": [540],
            "configuration": {
                "apiConfig": {
                    "method": "GET",
                    "url": "https://api.skilljar.com/v1/domains/[[domainName]]/published-courses",
                    "basicAuth": {
                        "username": "[[APIKey]]",
                        "required": [
                            "username"
                        ]
                    },
                    "pagination": {
                        "pageBasedPagination": {
                            "pageKey": "page",
                            "pageStartValue": 1
                        }
                    },
                    "headers": {},
                    "queryParams": {
                        "include_searchable_content": true
                    },
                    "format": "JSON"
            }
        },
            "baseSelector": {
                "jsonSelector": {
                    "label": "label",
                    "content": "results"
                }
            },
            "input": [
                {
                    "id": "domainName",
                    "name": "Domain Name",
                    "tooltip": "The custom domain of your Skilljar training site",
                    "typeId": "type.string",
                    "type": {
                        "stringType": {
                            "stereotype": "SIMPLE",
                            "maxLength": 200
                        }
                    }
                },
                {
                    "id": "APIKey",
                    "name": "API Key",
                    "tooltip": "Provide your API key as your username. If you are an admin on your account, you can generate an API Key from Organization settings > API Credentials page.",
                    "typeId": "type.string",
                    "type": {
                        "stringType": {
                            "stereotype": "SIMPLE",
                            "maxLength": 200,
                            "contentFlags": {
                                "noHtmlTags": true
                            }
                        }
                    },
                    "sensitive": true
                }
            ]
        },
        {
            "id": "fetchLessons",
